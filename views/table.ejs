<%- include('./partials/navbar.ejs') %>
<body>
  <div class="container">
    <h1 class="mt-5">Product List</h1>
    <table class="table table-striped mt-3">
      <thead>
        <tr>
          <th>ID</th>
          <th>Name</th>
          <th>Category</th>
          <th>Description</th>
          <th>Price</th>
          <th>Quantity</th>
        </tr>
      </thead>
      <tbody>
        <% products.forEach(product => { %>
          <tr>
            <td><%= product.id %></td>
            <td><%= product.name %></td>
            <td><%= product.category %></td>
            <td><%= product.description %></td>
            <td>$<%= product.price %></td>
            <td><%= product.quantity %></td>
          </tr>
        <% }); %>
      </tbody>
    </table>
  </div>
</body>
</html>
