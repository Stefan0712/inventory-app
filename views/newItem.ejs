<%- include('./partials/navbar.ejs') %>


<div class="container">
    <div class="row">

        <form class="container my-5" action="/new" method="POST">
            <h1 class="mb-5">Create a new item</h1>
            <div class="row">

                <div class="col-6">
    
                    <div class="mb-3">
                        <label class="form-label" for="name">Name*</label>
                        <input class="form-control" type="text" name="name" id="item-name" required>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="category">Category*</label>
                        <select class="form-control" type="text" name="category" id="item-category" required>
                            <option value="Fruit">Fruit</option>
                            <option value="Vegetable">Vegetable</option>
                            <option value="Meat">Meat</option>
                            <option value="Dairy">Dairy</option>
                            <option value="Seafood">Seafood</option>
                            <option value="Other">Other</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="description">Description*</label>
                        <input class="form-control" type="text" name="description" id="item-description" required>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="price">Price*</label>
                        <input class="form-control" type="number" name="price" id="item-price" required>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="purchasePrice">Purchase Price</label>
                        <input class="form-control" type="number" name="purchasePrice" id="item-purchasePrice">
                    </div>
                </div>
                <div class="col-6">
    
                    <div class="mb-3">
                        <label class="form-label" for="unit">Unit</label>
                        <input class="form-control" type="text" name="unit" id="item-unit">
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="quantity">Quantity*</label>
                        <input class="form-control" type="number" name="quantity" id="item-quantity" required>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="minStock">Min Stock</label>
                        <input class="form-control" type="number" name="minStock" id="item-minStock">
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="maxStock">Max Stock</label>
                        <input class="form-control" type="number" name="maxStock" id="item-maxStock">
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="expirationDate">Expiration Date</label>
                        <input class="form-control" type="text" name="expirationDate" id="item-expirationDate" placeholder="YYYY-MM-DD">
                    </div>
                </div>
            </div>

            <button class="btn btn-primary btn-lg" type="submit">Save</button>
        </form>
    </div>
</div>