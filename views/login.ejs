<%- layout('../partials/boilerplate') %>

<div class="login-container">
    <div class="container-fluid d-flex justify-content-center">
        <div class="card w-50">
            <div class="card-body w-75 d-flex justify-content-center align-items-center">
                <form action="/login" method="POST">
                    <h1 class="color-light">Login</h1>
                    <div class="mb-3">
                        <p>For simplicity sake, just enter only the password (Which is not "letmein")</p>
                        <label class="form-label" for="password">Password:</label>
                        <input class="form-control" type="password" name="password" id="password" required>
                    </div>
                    <button class="btn btn-success">Login</button>
                    <a href="/" class="btn btn-danger">Go back gome</a>
                </form>
            </div>
        </div>
    </div>
</div>